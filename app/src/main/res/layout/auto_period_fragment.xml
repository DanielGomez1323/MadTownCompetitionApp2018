<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autonomous Period"
        android:textSize="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/autoTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position"
        android:textSize="25sp"
        android:id="@+id/positionTextView"
        android:layout_below="@+id/autoTextView"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:textSize="18sp"
        android:id="@+id/leftPositionCheckBox"
        android:layout_below="@+id/positionTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Center"
        android:textSize="18sp"
        android:id="@+id/centerPositionCheckBox"
        android:layout_below="@+id/positionTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:textSize="18sp"
        android:id="@+id/rightPositionCheckBox"
        android:layout_below="@+id/positionTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"/>

</RelativeLayout>
