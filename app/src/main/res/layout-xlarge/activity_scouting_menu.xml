<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pollo.madtowncompetitionapp2018.ScoutingMenu">

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Team Number:"
        android:textSize="40sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textAlignment="center"
        android:id="@+id/teamNumberTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp" />

    <AutoCompleteTextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:hint="Ex. 1323"
        android:textSize="40sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />
    <requestFocus/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Match Number:"
        android:textSize="40sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textAlignment="center"
        android:id="@+id/matchNumberTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:hint="Ex. 12"
        android:textSize="40sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Start"
        android:textSize="40sp"
        android:id="@+id/startButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:padding="15dp" />

</RelativeLayout>