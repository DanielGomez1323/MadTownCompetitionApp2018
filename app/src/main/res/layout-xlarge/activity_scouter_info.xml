<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pollo.madtowncompetitionapp2018.ScouterInfo">

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Scout Name:"
        android:textSize="40sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textAlignment="center"
        android:id="@+id/scoutNameTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="40sp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/scoutNameEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10sp"/>
    <requestFocus/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Alliance Color:"
        android:textSize="40sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textAlignment="center"
        android:id="@+id/allianceColorTextView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scoutNameEditText"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:textSize="40sp"
        android:id="@+id/blueCheckBox"
        android:layout_below="@+id/allianceColorTextView"
        android:layout_marginTop="20dp"
        android:layout_marginStart="200dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:textSize="40sp"
        android:id="@+id/redCheckBox"
        android:layout_below="@+id/allianceColorTextView"
        android:layout_alignTop="@+id/blueCheckBox"
        android:layout_marginStart="460dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Next"
        android:textSize="40sp"
        android:id="@+id/scoutMenuButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:padding="15dp"/>

</RelativeLayout>